---
title: Color picker
js:
 - 18/helper
 - 18/colorpicker
css: 18/colorpicker
---

.container
	.row
		.col-sm-7
			%canvas#panel{width: 470, height: 290}

		.col-sm-5
			.well.well-sm
				.row
					.col-sm-5
						#preview.preview
					.col-sm-7.monospace
						.form-group
							.input-group
								%span.input-group-addon R
								= text_field_tag 'color_r',id: 'color_r', class: 'form-control input-sm'
						.form-group
							.input-group
								%span.input-group-addon G
								= text_field_tag 'color_g',id: 'color_g', class: 'form-control input-sm'
						.form-group
							.input-group
								%span.input-group-addon B
								= text_field_tag 'color_b',id: 'color_b', class: 'form-control input-sm'
						.form-group
							.input-group
								%span.input-group-addon #
								= text_field_tag 'color_hex',id: 'color_hex', class: 'form-control input-sm'